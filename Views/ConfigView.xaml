<UserControl
    x:Class="DamagoApiHelper.Views.ConfigView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="600"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal">
        <StackPanel Width="300" Orientation="Vertical">
            <GroupBox
                Margin="10,10,0,0"
                Padding="20"
                Header="Projekt">
                <StackPanel Orientation="Vertical">
                    <TextBox
                        Margin="0,0,0,10"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Center"
                        d:Text="C:\Projekte\TestProjekt"
                        Text="{Binding ProjectPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Command="{Binding ProjectPathSearchCommand}" Content="Durchsuchen" />
                </StackPanel>
            </GroupBox>
            <GroupBox
                Margin="10,10,0,0"
                Padding="20"
                Header="Klassen">
                <StackPanel Orientation="Vertical">
                    <ListBox
                        MinHeight="300"
                        MaxHeight="300"
                        DisplayMemberPath="EntityName"
                        ItemsSource="{Binding Endpoints, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding SelectedEndpoint, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox
                        Margin="0,10,0,0"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Center"
                        d:Text="Entity"
                        Text="{Binding EntityName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Margin="0,10,0,0"
                        Command="{Binding AddCommand}"
                        CommandParameter="Entity"
                        Content="Hinzufügen"
                        IsEnabled="{Binding EntityAddButtonEnabled, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Margin="0,5,0,0"
                        Command="{Binding RemoveCommand}"
                        CommandParameter="Entity"
                        Content="Entfernen"
                        IsEnabled="{Binding EntityRemoveButtonEnabled, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <GroupBox
                Margin="10,10,0,0"
                Padding="20"
                Header="Namen-Konfiguration">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Label
                            Width="150"
                            VerticalContentAlignment="Center"
                            Content="Klasse Name - Singular" />
                        <TextBox
                            Width="250"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            d:Text="Entity"
                            IsEnabled="False"
                            Text="{Binding EntityName}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label
                            Width="150"
                            VerticalContentAlignment="Center"
                            Content="Klasse Name - Plural" />
                        <TextBox
                            Width="250"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            d:Text="Entities"
                            Text="{Binding EntityNamePlural, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox
                Margin="10,10,0,0"
                Padding="20"
                VerticalAlignment="Top"
                Header="Endpunkt-Konfiugration">
                <StackPanel Orientation="Vertical">
                    <Button
                        Margin="0,0,0,5"
                        Command="{Binding AddCommand}"
                        CommandParameter="Endpoint"
                        Content="Alle hinzufügen" />
                    <Button
                        Margin="0,0,0,20"
                        Command="{Binding RemoveCommand}"
