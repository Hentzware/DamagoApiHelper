                            VerticalAlignment="Center"
                            Command="{Binding AddCommand}"
                            CommandParameter="Controller"
                            Content="Hinzufügen"
                            IsEnabled="{Binding SelectedEndpoint.ControllerAddButtonEnabled, UpdateSourceTrigger=PropertyChanged}" />
